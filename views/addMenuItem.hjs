<!DOCTYPE html>
<html>
  <head>
      <link rel='stylesheet' href='/styles/bootstrap.min.css' />
      <link rel='stylesheet' href='/styles/style.css' />
      <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
      <script src="/js/bootstrap.min.js" type="text/javascript"></script>
      <script src="/src/addMenuItem.js" type="text/javascript"></script>
      <style>
        body {
          background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
          min-height: 100vh;
          font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
          padding: 20px;
        }
        
        
      </style>
  </head>
  <body>
    <div class="container">
      <nav class="navbar navbar-inverse" style="padding-left:130px;">
          <ul class="nav navbar-nav">
            <li><a href="/ownerDashboard">Dashboard</a></li>
            <li class="active"><a href="/menuItems">Manage Menu</a></li>
            <li><a href="/truckOrders">View Orders</a></li>
            <li style="margin-left: 0px;"><a href="/logout">Logout</a></li>
          </ul>
      </nav>
    </div>
    
    <div class="container">
      <div class="form-container">
        <div class="form-header">
          <div class="truck-icon">ðŸšš</div>
          <h2>Add New Menu Item</h2>
          <p>Fill in the details to add a new item to your menu</p>
        </div>

        <div class="form-body">
          <!-- Success Message -->
          <div id="success-message" class="success-message">
            Menu item added successfully!
          </div>

          <!-- Add Menu Item Form -->
          <form id="add-item-form">
            
            <div class="form-group">
              <label class="required-label">Item Name</label>
              <input 
                type="text" 
                class="form-control" 
                id="item-name" 
                placeholder="e.g., Chicken Burger"
                required>
              <small class="help-block">Enter the name of your menu item</small>
            </div>

            <div class="form-group">
              <label class="required-label">Category</label>
              <input 
                type="text" 
                class="form-control" 
                id="item-category" 
                placeholder="e.g., Burgers, Drinks, Desserts"
                required>
              <small class="help-block">Specify the category (e.g., Main Course, Beverages)</small>
            </div>

            <div class="form-group">
              <label>Description</label>
              <textarea 
                class="form-control" 
                id="item-description" 
                rows="4"
                placeholder="Describe your menu item..."></textarea>
              <small class="help-block">Optional: Add details about ingredients or preparation</small>
            </div>

            <div class="form-group">
              <label class="required-label">Price (EGP)</label>
              <input 
                type="number" 
                step="0.01" 
                min="0.01" 
                class="form-control" 
                id="item-price" 
                placeholder="0.00"
                required>
              <small class="help-block">Enter price in EGP (e.g., 9.99)</small>
            </div>

            

            <div class="form-actions">
              <button type="button" class="btn btn-default btn-lg" id="cancel-btn">
                Cancel
              </button>
              <button type="submit" class="btn btn-success btn-lg" id="submit-btn">
                Add Menu Item
              </button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </body>
</html>